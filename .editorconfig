root = true

[*]
charset = utf-8
end_of_line = LF
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.md]
max_line_length = 80

[*.html]
indent_size = 4

[*.php]
# settings required by PSR-12 standard
end_of_line = LF
indent_style = space
indent_size = 4
max_line_length = 120

[*.twig]
indent_size = 4

[*.yaml]
indent_size = 4
